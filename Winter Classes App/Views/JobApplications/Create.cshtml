@model Winter_Classes_App.Models.JobApplicationViews

@{
    ViewData["Title"] = "Apply For Offer";
}

<div class="row page-box">
    <div class="col-sm-12">
        <h2>New Job Application: @Model.OfferName </h2>
        @using (Html.BeginForm("Create"))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName)
                @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName)
                @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber)
                @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.EmailAddress)
                @Html.EditorFor(m => m.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ContactAgreement)
                @Html.CheckBoxFor(m => m.ContactAgreement)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CvUrl)
                @Html.EditorFor(m => m.CvUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.CvUrl, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Hidden("OfferId")
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        }
    </div>
</div>

