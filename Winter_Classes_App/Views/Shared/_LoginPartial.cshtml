@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Session" asp-action="EditProfile">@User.Identity.Name</a></li>
        <li><a asp-area="" asp-controller="Session" asp-action="SignOut" id="loggOutButton">Sign out</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Session" asp-action="SignIn"  id="loggInButton">Sign in</a></li>
    </ul>
}
