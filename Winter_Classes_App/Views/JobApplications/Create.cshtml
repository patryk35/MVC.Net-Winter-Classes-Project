@model Winter_Classes_App.Models.JobApplication

@{
    ViewData["Title"] = "Apply For Offer";
}

<div class="row page-box">
    <div class="col-sm-12">
        <h2>New Job Application: @Model.JobOffer.JobTitle </h2>
        @using (Html.BeginForm("Create", null, FormMethod.Post, new { enctype = "multipart/form-data", name="formAdd", id="formAdd" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName)
                @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName)
                @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber)
                @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.EmailAddress)
                @Html.EditorFor(m => m.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Photo</label>
                <input type="file" class="form-control-file" name="photoFile" id="photoFile">
                @if (@ViewBag.PhotoError != null)
                {
                    <span class="field-validation-valid text-danger">@ViewBag.PhotoError</span>
                }
            </div>
            <div class="form-group">
                <label>CV</label>
                <input type="file" class="form-control-file" name="cvFile" id="cvFile">
                @if (@ViewBag.CvError != null)
                {
                    <span class="field-validation-valid text-danger">@ViewBag.CvError</span>
                }
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ContactAgreement)
                @Html.CheckBoxFor(m => m.ContactAgreement)
            </div>
            <div class="form-group">
                @Html.Hidden("JobOfferId")
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        }
    </div>
</div>


@section Scripts{

    <script src="~/js/jquery.validate.min.js"></script>
    <script>
        /*Validation, which triggers ajax post whether everything is valid*/

        $(function () {
            $("form[name='formAdd']").validate({
                rules: {
                    FirstName: "required",
                    LastName: "required",
                    PhoneNumber: "required",
                    EmailAddress: {
                        required: true,
                        email: true
                    },
                    photoFile: "required",
                    cvFile: {
                        required: true,
                        extension: "pdf"
                    }
                },
                messages: {
                    FirstName: "Please enter First Name",
                    LastName: "Please enter Last Name",
                    PhoneNumber: "Please enter Phone Number",
                    EmailAdress: {
                        email: "Wrong format. Write correct email adress",
                        required: "Email is required"
                    },
                    photoFile: "Please attach file",
                    cvFile: {
                        required: "Please attach file",
                        extension: "Allowed extention is pdf"
                    }
                },
                submitHandler: function (form) {
                    return true;
                }
            });
        });
    </script>
}
